<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Arts_UnderGraduate">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Economics"
        android:onClick="year"
        android:background="#59A434"
        android:textAllCaps="false"
        android:textSize="25sp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Geography"
        android:onClick="year"
        android:background="#FF1807"
        android:textSize="25sp"
        android:textAllCaps="false"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Physical Education"
        android:onClick="year"
        android:background="#009"
        android:textSize="25sp"
        android:textAllCaps="false"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fashion Designing"
        android:onClick="year"
        android:background="#673AB7"
        android:textSize="25sp"
        android:textAllCaps="false"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="English"
        android:onClick="year"
        android:background="#009688"
        android:textSize="25sp"
        android:textAllCaps="false"
        />

</LinearLayout>